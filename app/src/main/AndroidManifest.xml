<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Pemission for the Runtime permission task -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" /> <!-- this is for intent and image is for both -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

<!--    Permission for the WebView Task-->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TaskAndroid"
        tools:targetApi="31">
        <activity
            android:name=".taskwebview.TaskWebViewMain"
            android:exported="false" />
        <activity
            android:name=".tasksharedpreferences.HomePageSharedPreference"
            android:exported="false" />
        <activity
            android:name=".tasksharedpreferences.LoginPageSharedPreference"
            android:exported="false" />
        <activity
            android:name=".taskintentfilter.TaskIntentFilterMain"
            android:exported="true"
            android:label="IntentsandIntentsFilter"
            android:launchMode="singleTop">

            <!-- intent filter for the photos -->
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="image/jpg" />
                <data android:mimeType="audio/*" />
            </intent-filter>
        </activity>
        <activity
            android:name=".task_runtime_permissions.TaskRuntimePermissionMain"
            android:exported="false" />
        <activity
            android:name=".taskrecycleview.TaskRecycleViewMain"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".tc.TaskFragmentsMain"
            android:exported="false" />
        <activity
            android:name=".taskdialogs.TaskDialogMain"
            android:exported="false" />
        <activity
            android:name=".task_appbar_toolbar.TaskAppbarToolbarMain"
            android:exported="false" />
        <activity
            android:name=".taskfonts.TaskFontsMain"
            android:exported="false" />
        <activity
            android:name=".tasksnackbarfab.TaskSnackBarFabMain"
            android:exported="false" />
        <activity
            android:name=".tasksnackbarfab.fab.TaskFab"
            android:exported="false" />
        <activity
            android:name=".tasksnackbarfab.snackbar.TaskSnackBar"
            android:exported="false" />
        <activity
            android:name=".taskviewpager_tablayout.TaskViewpagerTabLayout"
            android:exported="false" />
        <activity
            android:name=".dimenResponse.dimen_responsive"
            android:exported="false" />
        <activity
            android:name=".drawable.customselector.CustomDrawableSelector"
            android:exported="false" />
        <activity
            android:name=".drawable.DrawableMain"
            android:exported="false" />
        <activity
            android:name=".drawable.customdrawable.MakecustomDrawable"
            android:exported="false" />
        <activity
            android:name=".taskactivity.data_pass.DataPass"
            android:exported="false" />
        <activity
            android:name=".taskactivity.lifecycle.LifeCycleActivity"
            android:exported="false" />
        <activity
            android:name=".taskactivity.data_pass.SecondActivityGetDataAndPaasIt"
            android:exported="false" />
        <activity
            android:name=".taskactivity.TaskActivityMain"
            android:exported="false" />
        <activity
            android:name=".tasklayout.framelayouttask.FrameLayoutTask"
            android:exported="false" />
        <activity
            android:name=".tasklayout.constraintlayoutask.ConstraintLayoutProfilePage"
            android:exported="false" />
        <activity
            android:name=".tasklayout.TaskLayoutMain"
            android:exported="false" />
        <activity
            android:name=".tasklayout.formwithscrolltask.LinearLayOutForm"
            android:exported="false" />
    </application>

</manifest>